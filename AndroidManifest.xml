<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.kettering.autosilencer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:icon="@drawable/as_icon"
        android:theme="@android:style/Theme.Black.NoTitleBar" android:allowClearUserData="true" android:debuggable="true">
        <activity
            android:name=".AutoSilencerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".EventListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
        
        <activity
            android:name=".MyPreferencesActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
    </application>

</manifest>