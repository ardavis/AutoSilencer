<?xml version="1.0" encoding="utf-8"?>   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="20dp" >
        
   	<ImageView
    	android:id="@+id/mainMenuTitle"
      	android:layout_width="match_parent"
      	android:layout_height="wrap_content"
        android:src="@drawable/auto_silencer_logo" />
	
   	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:layout_marginBottom="10dp" >
   	    
   		<TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="@string/currentState" 
	        android:gravity="right"
	        android:textSize="15dp"
	        android:textColor="@color/menu_text_color" />
   		
   		<TextView
	        android:id="@+id/currentState"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:gravity="left"
	        android:text="Vibrate" 
	        android:textSize="15dp"
	        android:layout_marginLeft="15dp"
	        android:textColor="@color/menu_text_color" />
   			    
   	</LinearLayout>
    
	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:layout_marginBottom="20dp" >
   		
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="@string/nextEvent" 
	        android:gravity="right" 
	        android:textSize="15dp"
	        android:textColor="@color/menu_text_color" />
	    
	    <TextView
	        android:id="@+id/nextEvent"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:gravity="left"
	        android:layout_marginLeft="15dp" 
	        android:textSize="15dp"
	        android:textColor="@color/menu_text_color" />

	</LinearLayout>
	
    <ToggleButton
        android:id="@+id/enableDisable"
        android:textOff="Disabled"
        android:textOn="Enabled"
        android:checked="true"
        style="@style/enable_disable_btn" />

    <Button
        android:id="@+id/viewUpEvents"
        android:text="@string/viewUpEvents"
        style="@style/main_menu_btn" />
    	  
    <Button
        android:id="@+id/addCalendarEvent"
        android:text="@string/addCalendarEvent" 
        style="@style/main_menu_btn" />
	    
    <Button
        android:id="@+id/settings"
        android:text="@string/settings" 
        style="@style/main_menu_btn" />
	
</LinearLayout>