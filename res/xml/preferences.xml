<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="General Settings">

            	<ListPreference
                    android:title="Calendar Poling Interval"
                    android:summary="How often would you like to poll your calendar?"
                    android:key="calendarPollingInterval"
                    android:entries="@array/pollingTimesArray"
                    android:entryValues="@array/pollingTimesArray" />
                <ListPreference
                    android:title="Event Volume"
                    android:summary="Set a default volume for events"
                    android:key="eventVolume"
                    android:entries="@array/eventVolume"
                    android:entryValues="@array/eventVolume" />
                <CheckBoxPreference 
                    android:title="Ignore All Day Events?" 
                    android:summary="Choose to ignore all day events or not"
                    android:key="ignoreAllDayEvents" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Custom Events"
                android:enabled="false" >
	        <Preference
	        	android:title="Add Custom Event"
	            android:summary="Implemted in Future Version"
	            android:key="addCustomEvent" />
	        <Preference
              	android:title="View All Custom Events"
              	android:summary="Implemted in Future Version"
              	android:key="viewAllCustomEvents" />
        </PreferenceCategory>
</PreferenceScreen>